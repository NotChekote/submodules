#!/usr/bin/env bash

set -euo pipefail

. "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/../lib/git.bash"
git.paths.get

. get_tty
. "$root/docker/lib/volumes.sh"
. "$submodules/lib/docker_host_user_id.sh"

# We need word-splitting for the -t & -v options to work properly
# shellcheck disable=SC2086
docker run \
    -e LOCAL_USER_ID="$DOCKER_HOST_USER_ID" \
    -i \
    $TTY \
    --env-file docker/.env \
    --mount source="$PROJECT_VOLUME",target=/workdir \
    --mount source=user_cache,target=/home/node/.cache \
    --rm \
    chekote/node:16.13.1-dev-alpine "$@"
